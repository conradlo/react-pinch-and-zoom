{
  "name": "react-pinch-and-zoom",
  "version": "1.2.5",
  "author": "Conrad Lo",
  "description": "A react container component with pinch-to-zoom gesture interaction.",
  "keywords": [
    "react",
    "reactjs",
    "pinch",
    "zoom",
    "pan"
  ],
  "files": [
    "lib/"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/conradlo/react-pinch-and-zoom"
  },
  "homepage": "https://github.com/conradlo/react-pinch-and-zoom#readme",
  "bugs": "https://github.com/conradlo/react-pinch-and-zoom/issues",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --ext .js,.jsx",
    "lint:fix": "eslint --fix ./src --ext .js,.jsx",
    "clear:lib": "rimraf lib/",
    "clear:docs": "rimraf docs/",
    "clear:all": "npm run clear:lib && npm run clear:docs",
    "build:lib": "tsc --project .",
    "build:docs": "webpack --config webpack.prod.js",
    "build:all": "npm run build:lib && npm run build:docs",
    "build": "npm run lint:fix && npm run test && npm run clear:all && npm run build:all",
    "version": "npm run build && git add .",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "css-loader": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "express": "^4.16.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.4.5",
    "morgan": "^1.9.1",
    "prettier": "1.14.3",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-hot-loader": "^4.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.45.2",
    "sass-loader": "^12.4.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^27.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^3.6.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.2.1"
  },
  "peerDependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
